<div id="form">
  <h2>SIGN UP</h2>
  <form action="/signup" method="POST">
 
    <label> Username
        <input type="text" name="username" placeholder="Username" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <label> Favorite Artists
        <input type="text" name="favoriteArtist" placeholder="Favorite Artists" />
    </label>

    <label> Country
      <select id="country" name="country">
        {{#each country}}
          <option value="{{this.value}}">{{this.name}}</option>
        {{/each}}
      </select>
    </label>

    <label> Avatar
        {{#each avatar}}
        <img class="avatar" id="{{this.src}}" src="{{this.src}}" alt="{{this.name}}">
        {{/each}}
    </label>
    <input id="avatarInput" type="hidden" value="av1" name="avatar">
    <button type="submit">SIGN UP</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    
  </form>
</div>
<script>
  const allAvatar = [...document.querySelectorAll(".avatar")];
  allAvatar.forEach((elem, index) => {
    const avatarSrc = elem.id;
    elem.addEventListener("click", () => {
      document.getElementById("avatarInput").value = avatarSrc;
    })
  })
</script>