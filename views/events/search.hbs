<h2>Search</h2>
<form action="/search" method="POST" class="d-flex">
    <input class="form-control me-2" name="search" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-light" type="submit">Search</button>
</form>

<br><br><br><br><br><br><br>
{{#each cleanData}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">  
    <div class="col-md-4">
      <img src={{this.srcImage}} class="img-fluid rounded-start">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.url}}</p>
        <p class="card-text"><small class="text-muted">{{this.locale}}</small></p>
        <form action="/detailevents" method="POST">
        <button type="button" class="btn btn-ligth">More</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}